{
  "name": "@sketchresponse/sketch-tool",
  "version": "1.0.0-rc",
  "private": true,
  "description": "A configurable Javascript front-end drawing tool with plugin components",
  "author": "Martin Segado",
  "license": "All rights reserved",
  "devDependencies": {
    "autoprefixer": "^6.5.0",
    "fast-sourcemap-concat": "^1.0.4",
    "glob": "^5.0.14",
    "gobble": "^0.11.3",
    "gobble-autoprefixer": "^0.2.0",
    "gobble-babel": "^5.5.8",
    "gobble-cli": "^0.7.0",
    "gobble-concat": "^0.3.0",
    "gobble-rename": "^0.1.0",
    "gobble-replace": "^0.3.1",
    "gobble-sass": "^0.5.0",
    "jspm": "^0.16.46",
    "node-sass": "^3.10.1",
    "postcss-cli": "^2.6.0"
  },
  "scripts": {
    "postinstall": "jspm install",
    "start": "gobble",
    "build": "rm -rf ./tmp && npm run css && gobble build dist -f && npm run clean && mv ./dist/* ../static/sketch_tool_dist",
    "css": "rm -rf ./tmp && npm run sass && npm run autoprefixer",
    "sass": "node-sass --output-style compressed --source-map true --sourceMapContents true ./styles/ --output ./tmp",
    "autoprefixer": "postcss --use autoprefixer --replace ./tmp/*.css",
    "cleancss": "mv ./tmp/main.css ./dist/main.css && mv ./tmp/main.css.map ./dist/main.css.map && rm -rf ./tmp",
    "cleanjs": "mv vendorBundle.js dist/vendorBundle.js && mv vendorBundle.map dist/vendorBundle.js.map",
    "clean": "npm run cleancss && npm run cleanjs"
  },
  "jspm": {
    "dependencies": {
      "classnames": "npm:classnames@^2.2.5",
      "d3": "github:d3/d3@^3.5.17",
      "dom-shims": "npm:dom-shims@^0.1.4",
      "events": "github:jspm/nodelibs-events@^0.1.1",
      "fastclick": "npm:fastclick@^1.0.6",
      "jquery": "github:components/jquery@^2.2.4",
      "jsondiffpatch": "npm:jsondiffpatch@^0.1.43",
      "keymaster": "npm:keymaster@^1.6.2",
      "pepjs": "github:jquery/pep@^0.3.0"
    },
    "devDependencies": {
      "babel": "npm:babel-core@^5.8.38",
      "babel-runtime": "npm:babel-runtime@^5.8.38",
      "core-js": "npm:core-js@^0.9.18"
    }
  }
}
